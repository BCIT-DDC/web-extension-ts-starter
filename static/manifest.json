{
    "manifest_version": 2,
    "name": "Web Extension Starter",
    "description": "A Web Extension starter kit",
    "version": "1.0.0",
    "browser_action": {
        "default_icon": "icon-16.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["js/background.bundle.js"],
        "persistent": false
    },
    "content_scripts": [{
      "matches": ["http://*/", "https://*/"],
        "js": [
          "js/content-script.bundle.js"
        ]
    }],
    "icons": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    },
    "permissions": ["tabs", "activeTab", "notifications", "http://*/", "https://*/"]
}
